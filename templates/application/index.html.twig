{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <h1>Application index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AppCode</th>
                <th>Name</th>
                <th>AppGroup</th>
                <th>AppType</th>
                <th>Description</th>
                <th>AppCost</th>
                <th>LastModified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.appCode }}</td>
                <td>{{ application.name }}</td>
                <td>{{ application.appGroup }}</td>
                <td>{{ application.appType }}</td>
                <td>{{ application.description }}</td>
                <td>{{ application.appCost }}</td>
                <td>{{ application.lastModified ? application.lastModified|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('application_show', {'id': application.id}) }}">show</a>
                    <a href="{{ path('application_edit', {'id': application.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('application_new') }}">Create new</a>
{% endblock %}
